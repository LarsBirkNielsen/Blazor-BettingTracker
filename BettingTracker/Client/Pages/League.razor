@page "/league"
@page "/league/{id:int}"
@inherits LeagueBase

@if (Id is null)
{
    <PageTitle>Create A League</PageTitle>
    <h3>Create League</h3>
}
else
{
    <PageTitle>Edit @League.Name</PageTitle>
    <h3>Edit @League.Name</h3>
}

<EditForm Model="League" OnSubmit="HandleSubmit">
    <div>
        <label for="leagueName">Name</label>
        <InputText placeholder="Name" id="League.Name" @bind-Value="League.Name" class="form-control" />
    </div>
    <div>
        <label for="country">Country</label>
        <InputText placeholder="Country" id="country" @bind-Value="League.Country" class="form-control" />
    </div>
    <br />
    @if (Id is not null)
    {
        <button type="submit" class="btn btn-primary">@btnText</button>
        <button type="button" class="btn btn-danger"
            @onclick="DeleteLeague">
            Delete League
        </button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">@btnText</button>
        <button @onclick="HandleSeeListClick" class="btn btn-secondary">See List</button>

    }
</EditForm>