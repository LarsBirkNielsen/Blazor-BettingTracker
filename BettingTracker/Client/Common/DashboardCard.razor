@using BettingTracker.Client.Services.DashboardService
@using System.Globalization
@inherits ComponentBase



@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Data { get; set; }

    [Parameter]
    public string IconName { get; set; }
}


<div class="col-xl-3 col-md-6 margin-b">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold top-card-text-color text-uppercase text-uppercase mb-1">
                        @Title
                    </div>
                    <div class="h5 mb-0 font-weight-bold top-card-sub-header-text-color">@Data</div>
                </div>
                <div class="col-auto">
                    <ion-icon class="top-card-icon" name="@IconName"></ion-icon>
                </div>
            </div>
        </div>
    </div>
</div>